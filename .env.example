# ============================================================================
# PROJECT HIM - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
APP_NAME=Project HIM API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development  # development, staging, production

# ============================================================================
# Server Settings
# ============================================================================
HOST=0.0.0.0
PORT=8000

# ============================================================================
# Database Settings
# ============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=project_him_db

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=False  # Set to True to see SQL queries in logs

# ============================================================================
# Authentication & Security
# ============================================================================
# IMPORTANT: Generate a secure secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# OAuth2 Providers (Optional - uncomment if using)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ============================================================================
# CORS Settings
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# ============================================================================
# File Upload Settings
# ============================================================================
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# ============================================================================
# Pagination
# ============================================================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ============================================================================
# Email Settings (Optional - for notifications)
# ============================================================================
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# SMTP_FROM_EMAIL=noreply@projecthim.org
# SMTP_FROM_NAME=Project HIM

# ============================================================================
# Redis Settings (Optional - for caching/background tasks)
# ============================================================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
# LOG_FILE=logs/app.log  # Uncomment to log to file

# ============================================================================
# QR Code & Name Tag Settings
# ============================================================================
QR_CODE_SIZE=300
QR_CODE_BORDER=4
NAME_TAG_TEMPLATE_DIR=templates/nametags

# ============================================================================
# Organization Settings
# ============================================================================
DEFAULT_TIMEZONE=America/Los_Angeles
DATE_FORMAT=%Y-%m-%d
DATETIME_FORMAT=%Y-%m-%d %H:%M:%S

# ============================================================================
# PRODUCTION SETTINGS (uncomment for production)
# ============================================================================
# DEBUG=False
# ENVIRONMENT=production
# DB_ECHO=False
# LOG_LEVEL=WARNING
